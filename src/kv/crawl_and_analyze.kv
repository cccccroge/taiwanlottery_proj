#:kivy 1.0

<CrawlAndAnalyze@MDBoxLayout>:
    orientation: 'vertical'
    padding: ['40sp', '40sp']
    spacing: '10sp'
    Header:
        text: '取得資料並建立分析'
    MDBoxLayout:
        orientation: 'vertical'
        padding: ['60sp', '20sp']
        MDProgressBar:
            size_hint_y: None
            value: 0 if app.total_count == 0 else (app.scraped_count / app.total_count) * 100
        DebugConsole:
            

<DebugConsole@ScrollView>:
    do_scroll_x: False
    canvas.before:
        Color:
            rgba: .18, .18, .18, 1
        Rectangle:
            pos: self.pos
            size: self.size
    MDBoxLayout:
        orientation: "vertical"
        padding: ['20sp', 0]
        MDLabel:
            size_hint_y: None
            text: app.info_text
        Widget:
