#:kivy 1.0

<ChooseRange@MDBoxLayout>:
    orientation: 'vertical'
    padding: ['40sp', '40sp']
    spacing: '10sp'
    Header:
        text: '請選擇分析區間'
    MDBoxLayout:
        adaptive_height: True
        padding: ['60sp', '20sp']
        DateInput:
            hint_text: '開始時間'
            text: app.time_range['start'].strftime('%Y-%m-%d')
        Label:
            size_hint_x: None
            text: '~'
            font_size: '16sp'
        DateInput:
            hint_text: '結束時間'
            text: app.time_range['end'].strftime('%Y-%m-%d')
    NextStep:

<DateInput>:
    mode: "rectangle"
    font_name: 'font/Noto_Sans_TC/NotoSansTC-Bold.otf'
    font_name_hint_text: 'font/Noto_Sans_TC/NotoSansTC-Bold.otf'

<DatePickerYearSelectableItem>:
    theme_text_color: 'Primary'